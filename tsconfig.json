{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],  // This is fine to keep
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/**/*", "types/global.d.ts",     "src/**/*",               // Include your source files
  "src/types/global.d.ts",  // Adjust this path according to your structure
  "types/global.d.ts",      // If you put it in 'types' folder, adjust accordingly
  "global.d.ts"             // If in root
  ],
  "exclude": ["node_modules"]
}
